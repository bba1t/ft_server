# 🎯 БЛОК НАСТРОЕК СЕРВЕРА MYSQL
[mysqld]

# 👤 Пользователь, от имени которого работает MySQL
user = mysql
# 📍 Файл с Process ID (для управления службой)
pid-file = /var/run/mysqld/mysqld.pid
# 🔌 Unix-сокет для локальных подключений
socket = /var/run/mysqld/mysqld.sock
# 🚪 Порт для сетевых подключений
port = 3306
# 📁 Директория с исполняемыми файлами MySQL
basedir = /usr
# 💾 Директория для хранения баз данных
datadir = /var/lib/mysql
# 📊 Временная директория для сортировок и временных таблиц
tmpdir = /tmp
# 🌐 IP-адрес, на котором слушает MySQL (127.0.0.1 = только localhost)
bind-address = 127.0.0.1

# 🛡️ НАСТРОЙКИ БЕЗОПАСНОСТИ
# 🔓 Разрешить сетевые подключения (0 = разрешено)
skip-networking=0
# 🔓 Не пропускать bind-address настройку
skip-bind-address

# 🚀 ОПТИМИЗАЦИЯ ДЛЯ DOCKER/CONTAINERS
# 💰 Размер буферного пула InnoDB (кэш данных в оперативной памяти)
innodb_buffer_pool_size = 16M
# 📝 Размер лог-файлов InnoDB
innodb_log_file_size = 48M
# 👥 Максимальное количество одновременных подключений
max_connections = 100

# 🎯 БЛОК НАСТРОЕК КЛИЕНТА MYSQL
[mysql]
# 🔤 Кодировка по умолчанию для клиента
default-character-set = utf8mb4

# 🎯 БЛОК НАСТРОЕК MYSQLADMIN
[mysqladmin]
# 🔤 Кодировка по умолчанию для mysqladmin
default-character-set = utf8mb4